# ======================================
# Kebabalab VAPI Ordering System
# Environment Configuration - CORRECTED
# ======================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ======================================
# SERVER CONFIGURATION
# ======================================
PORT=8000
HOST=0.0.0.0
DEBUG=false

# ======================================
# BUSINESS DETAILS
# ======================================
# These override defaults from data/business.json
SHOP_NAME=Kebabalab
SHOP_ADDRESS=1/99 Carlisle St, St Kilda VIC 3182
SHOP_TIMEZONE=Australia/Melbourne

# ======================================
# TAX CONFIGURATION
# ======================================
# Australian GST is 10% (all menu prices are GST-inclusive)
GST_RATE=0.10

# ======================================
# SESSION CONFIGURATION
# ======================================
# Session timeout in seconds (NOT SESSION_TTL_SECONDS!)
SESSION_TTL=1800
# Maximum concurrent sessions (in-memory mode only)
MAX_SESSIONS=1000

# ======================================
# TWILIO SMS CONFIGURATION
# ======================================
# Required for sending receipts and shop notifications
TWILIO_ACCOUNT_SID=AC2d65f829acf1968227ae773ec8ac249c
TWILIO_AUTH_TOKEN=0d819f3b763587bac9706e170b023ecf
# Your Twilio phone number (E.164 format: +61...)
TWILIO_FROM=+61468033229

# Shop notification number (where to SMS new orders)
SHOP_ORDER_TO=+61423680596

# ======================================
# MENU & LINKS
# ======================================
# URL for menu link (sent via SMS) - NOTE: MENU_LINK_URL not MENU_LINK!
MENU_LINK_URL=https://kebabalab.com.au/menu

# ======================================
# REDIS CONFIGURATION (Optional but Recommended)
# ======================================
# For production, use Redis for session storage
# Falls back to in-memory if Redis unavailable
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_password_here

# ======================================
# CORS CONFIGURATION (Optional)
# ======================================
# Allowed origins for CORS (comma-separated)
# Use * for development, specific domains for production
ALLOWED_ORIGINS=*

# ======================================
# VARIABLES THAT DON'T DO ANYTHING
# (The server doesn't read these - they're ignored)
# ======================================
# LOG_LEVEL - server uses logging.INFO hardcoded
# APP_VERSION - not used
# SERVER_BASE_URL - not used
# DB_PATH - server uses hardcoded 'data/orders.db'
# MENU_JSON_PATH - server uses hardcoded 'data/menu.json'
# RULES_JSON_PATH - not used
# BUSINESS_JSON_PATH - not used
# HOURS_JSON_PATH - not used
# SQUARE_* - not implemented
# ADMIN_TOKEN - not used
# DISABLE_TWILIO_SIGNATURE_VALIDATION - not used

# ======================================
# WHAT CHANGED FROM YOUR .env:
# ======================================
# ❌ REMOVED: SESSION_TTL_SECONDS → ✅ USE: SESSION_TTL
# ❌ REMOVED: MENU_LINK → ✅ USE: MENU_LINK_URL
# ✅ ADDED: SHOP_NAME (was missing)
# ✅ ADDED: SHOP_ADDRESS (was missing)
# ✅ ADDED: SHOP_TIMEZONE (was missing)
# ✅ ADDED: MAX_SESSIONS (was missing)
# ✅ ADDED: REDIS_* (was missing)

# ======================================
# PRODUCTION CHECKLIST
# ======================================
# [ ] Update TWILIO credentials (if not already correct)
# [ ] Set SHOP_ORDER_TO to correct shop phone
# [ ] Set MENU_LINK_URL to correct menu URL
# [ ] Install Redis and configure REDIS_* vars
# [ ] Set ALLOWED_ORIGINS to specific VAPI domains
# [ ] Never use DEBUG=true in production
# [ ] Rotate credentials every 90 days
