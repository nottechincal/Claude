# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ==================== Server Configuration ====================

# Port to run the server on (default: 8000)
PORT=8000

# Environment (production, staging, development)
ENVIRONMENT=production

# Debug mode (false for production)
DEBUG=false

# ==================== Database ====================

# Path to SQLite database
DB_PATH=data/orders.db

# ==================== VAPI Configuration ====================

# Your VAPI API key (get from https://dashboard.vapi.ai)
VAPI_API_KEY=sk_live_your_api_key_here

# Your VAPI phone number
VAPI_PHONE_NUMBER=+1234567890

# Webhook secret for verification (optional but recommended)
WEBHOOK_SECRET=your_random_secret_here

# ==================== Logging ====================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/kebabalab_production.log

# Max log file size (in bytes, 10MB default)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ==================== Business Configuration ====================

# Shop name
SHOP_NAME=Kebabalab

# Shop phone number
SHOP_PHONE=+61412345678

# Shop address (for customer reference)
SHOP_ADDRESS=123 Main St, Sydney NSW 2000

# Default prep time in minutes (for estimateReadyTime)
DEFAULT_PREP_TIME=15

# Maximum prep time in minutes
MAX_PREP_TIME=45

# ==================== Hours of Operation ====================

# Monday-Thursday
HOURS_MON_THU_OPEN=11:00
HOURS_MON_THU_CLOSE=22:00

# Friday-Saturday
HOURS_FRI_SAT_OPEN=11:00
HOURS_FRI_SAT_CLOSE=23:00

# Sunday
HOURS_SUN_OPEN=11:00
HOURS_SUN_CLOSE=21:00

# ==================== Pricing ====================

# GST rate (0.10 = 10%)
GST_RATE=0.10

# Currency
CURRENCY=AUD

# ==================== Security (Optional) ====================

# Rate limiting (requests per minute)
RATE_LIMIT=60

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://vapi.ai,https://dashboard.vapi.ai

# ==================== Monitoring (Optional) ====================

# Enable performance monitoring
ENABLE_MONITORING=true

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# ==================== Notifications (Optional) ====================

# Enable SMS notifications to shop for new orders
ENABLE_SMS_NOTIFICATIONS=false

# Twilio credentials (if SMS enabled)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_FROM_NUMBER=+1234567890
# TWILIO_TO_NUMBER=+61412345678

# ==================== Advanced ====================

# Session timeout (in seconds, default 1 hour)
SESSION_TIMEOUT=3600

# Auto-cleanup old sessions (in seconds, default 24 hours)
SESSION_CLEANUP_INTERVAL=86400

# Database backup interval (in seconds, default 6 hours)
DB_BACKUP_INTERVAL=21600
