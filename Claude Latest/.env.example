# ======================================
# Kebabalab VAPI Ordering System
# Environment Configuration Template
# ======================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ======================================
# DATABASE CONFIGURATION
# ======================================
DB_PATH=data/orders.db

# ======================================
# TAX CONFIGURATION
# ======================================
# Australian GST is 10% (0.10)
GST_RATE=0.10

# ======================================
# TWILIO SMS CONFIGURATION (Optional)
# ======================================
# If you want SMS notifications for orders
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM=+61xxxxxxxxxx
SHOP_ORDER_TO=+61xxxxxxxxxx

# ======================================
# VAPI CONFIGURATION
# ======================================
# Get these from: https://dashboard.vapi.ai/
# IMPORTANT: Keep these secret! Never commit them to git!
VAPI_API_KEY=sk_live_xxxxxxxxxxxxx
VAPI_ASSISTANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VAPI_WEBHOOK_SECRET=your_webhook_secret_here_if_using_verification

# ======================================
# SHOP CONFIGURATION
# ======================================
SHOP_NAME=Kebabalab
SHOP_TIMEZONE=Australia/Melbourne
SHOP_PHONE=+61xxxxxxxxxx

# ======================================
# SERVER CONFIGURATION
# ======================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# ======================================
# CORS CONFIGURATION
# ======================================
# Allowed origins for CORS (comma-separated)
# For production, restrict to VAPI domains only
ALLOWED_ORIGINS=https://api.vapi.ai,https://vapi.ai

# ======================================
# SESSION CONFIGURATION
# ======================================
# Session TTL in seconds (default: 1800 = 30 minutes)
SESSION_TTL=1800
# Maximum number of concurrent sessions
MAX_SESSIONS=1000

# ======================================
# PATHS CONFIGURATION
# ======================================
LOG_PATH=logs/kebabalab_server.log
DATA_PATH=data/
BACKUP_PATH=backups/
MENU_PATH=data/menu.json

# ======================================
# NGROK CONFIGURATION (Development Only)
# ======================================
# Your ngrok URL when testing locally
# Format: https://your-subdomain.ngrok-free.app
NGROK_URL=https://example.ngrok-free.app

# ======================================
# SECURITY CONFIGURATION
# ======================================
# Maximum request size in bytes
MAX_REQUEST_SIZE=10485760
# Rate limiting (requests per minute per IP)
RATE_LIMIT=60

# ======================================
# NOTES
# ======================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values (replace all xxx placeholders)
# 3. Never commit .env to version control!
# 4. For production, use environment variables or secrets management
# 5. Rotate credentials regularly (every 90 days recommended)
